for (int x = 0; x < 3; x++) {
for (int y = 0; y< 5; y++) {
if(font[pxl]='1')
{
;
}
pxl++;
}
xpt = xpt+4;
}
}
else
ypt = ypt +6;
xpt = 0;
}
}


